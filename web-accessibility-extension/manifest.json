{
  "manifest_version": 3,
  "name": "Ukumari",
  "description": "Mejora la accesibilidad de cualquier sitio web con herramientas visuales, de navegaci\u00f3n y voz.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils/storage.js",
        "utils/tts.js",
        "utils/keyboard-nav.js",
        "content/dom-injector.js",
        "content/content-script.js",
        "content/floating-widget.js"
      ],
      "css": [
        "content/styles/themes.css",
        "content/styles/links-highlight.css",
        "content/styles/floating-widget.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content/styles/*.css",
        "utils/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "utils/storage.js"
      ],
      "matches": [],
      "extension_ids": [],
      "use_dynamic_url": false
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "es"
}